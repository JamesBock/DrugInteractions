<UserControl
    x:Class="UWPLockStep.Views.IngredientViewBase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwplockstep="using:UWPLockStep.Views"
    xmlns:reactiveUi="using:ReactiveUI"
    Height="50" Width="600"
    mc:Ignorable="d">
    <Grid Background="WhiteSmoke" >
        <TextBlock x:Name="ingredientNameText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">
        </TextBlock>
        <TextBlock x:Name="refreshMaxText"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center">
        </TextBlock>
        <TextBlock x:Name="ingredientAmount"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom">
        </TextBlock>

    </Grid>
</UserControl>
